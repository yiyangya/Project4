<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>Cat Explorer Web Service</display-name>
    
    <!-- Main API Servlet - handles cat search requests from Android app -->
    <servlet>
        <servlet-name>CatSearchServlet</servlet-name>
        <servlet-class>edu.heinz.ds.CatSearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CatSearchServlet</servlet-name>
        <url-pattern>/api/search</url-pattern>
    </servlet-mapping>
    
    <!-- Dashboard Servlet - displays analytics and logs -->
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>edu.heinz.ds.DashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    
    <!-- Welcome file -->
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>

